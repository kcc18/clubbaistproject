@page
@model BAIS3230Project.Pages.StandingTeeTimes.CreateModel

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>StandingTeeTime</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


		@if (User.IsInRole("Admin") || User.IsInRole("Clerk") || User.IsInRole("ProShop"))
		{
			<div class="form-group">
				<label asp-for="StandingTeeTime.MemberID" class="control-label"></label>
				<select asp-for="StandingTeeTime.MemberID" class="form-control" asp-items="@(new SelectList(Model.MemberOptions, "MemberID", "FullName"))">
					<option value="">-- Select a Member --</option>
				</select>
				<span asp-validation-for="StandingTeeTime.MemberID" class="text-danger"></span>
			</div>

@* 				<label asp-for="StandingTeeTime.MemberID" class="control-label"></label>
					<select asp-for="StandingTeeTime.MemberID" class="form-control">
						<option value="">-- Select a Member --</option>
						@if (Model.MemberOptions != null)
						{
							foreach (var member in Model.MemberOptions)
							{
								<option value="@member.MemberID">@member.FullName</option>
							}
						}
					</select> *@


		}
		else
		{
			<input type="hidden" asp-for="StandingTeeTime.MemberID" />
		}


		<div class="form-group">
			<label asp-for="StandingTeeTime.RequestedStartDate" class="control-label"></label>
			<input asp-for="StandingTeeTime.RequestedStartDate" class="form-control" type="date"/>
			<span asp-validation-for="StandingTeeTime.RequestedStartDate" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="StandingTeeTime.RequestedEndDate" class="control-label"></label>
			<input asp-for="StandingTeeTime.RequestedEndDate" class="form-control" type="date" />
			<span asp-validation-for="StandingTeeTime.RequestedEndDate" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="StandingTeeTime.RequestedTeeTime" class="control-label"></label>
			<input asp-for="StandingTeeTime.RequestedTeeTime" class="form-control" type="time"/>
			<span asp-validation-for="StandingTeeTime.RequestedTeeTime" class="text-danger"></span>
		</div>

		@if (User.IsInRole("Admin") || User.IsInRole("Clerk") || User.IsInRole("ProShop"))
		{
			<div class="form-group">
				<label asp-for="StandingTeeTime.PriorityNumber" class="control-label"></label>
				<input asp-for="StandingTeeTime.PriorityNumber" class="form-control" />
				<span asp-validation-for="StandingTeeTime.PriorityNumber" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="StandingTeeTime.EmployeeID" class="control-label"></label>
				<select asp-for="StandingTeeTime.EmployeeID" class="form-control">
					<option value="">Select an Employee</option>
					@foreach (var employee in Model.EmployeeOptions)
					{
						<option value="@employee.EmployeeID">@employee.FullName</option>
					}
				</select>
				<span asp-validation-for="StandingTeeTime.EmployeeID" class="text-danger"></span>
			</div>
		}
		<div class="form-group">
                <label asp-for="StandingTeeTime.NumberOfPlayers" class="control-label"></label>
                <input asp-for="StandingTeeTime.NumberOfPlayers" class="form-control" />
                <span asp-validation-for="StandingTeeTime.NumberOfPlayers" class="text-danger"></span>
		</div>
		<div class="form-group">
                <label asp-for="StandingTeeTime.OccurrenceDate" class="control-label"></label>
                <input asp-for="StandingTeeTime.OccurrenceDate" class="form-control" type="date" />
                <span asp-validation-for="StandingTeeTime.OccurrenceDate" class="text-danger"></span>
		</div>
		<div class="form-group">
                <label asp-for="StandingTeeTime.Status" class="control-label"></label>
                <input asp-for="StandingTeeTime.Status" class="form-control" />
                <span asp-validation-for="StandingTeeTime.Status" class="text-danger"></span>
		</div>


		<div class="form-group">
			<input type="submit" value="Create" class="btn btn-primary" />
		</div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
