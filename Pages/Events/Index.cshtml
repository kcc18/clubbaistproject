@page
@model BAIS3230Project.Pages.Events.IndexModel

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.eventList[0].EventName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.eventList[0].EventDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.eventList[0].StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.eventList[0].EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.eventList[0].EventType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.eventList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventType)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.EventID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.EventID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.EventID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
