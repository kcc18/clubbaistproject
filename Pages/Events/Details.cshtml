@page "{id:int}"
@model BAIS3230Project.Pages.Events.DetailsModel

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

    <div>
        <h4>Event Details</h4>
        <hr />
        @if (Model.EventDetail != null)
        {
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EventDetail.EventName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EventDetail.EventName)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EventDetail.EventDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EventDetail.EventDate)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EventDetail.StartTime)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EventDetail.StartTime)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EventDetail.EndTime)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EventDetail.EndTime)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EventDetail.EventType)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EventDetail.EventType)
                </dd>
            </dl>
        }
        else
        {
            <p>@Model.Message</p> <!-- Display error message if event not found -->
        }
    </div>

    <div>
        <a asp-page="./Edit" asp-route-id="@Model.EventDetail.EventID">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>

</body>
</html>
