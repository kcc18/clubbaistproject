@page
@model BAIS3230Project.Pages.Events.CreateModel

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="newEvent.EventName" class="control-label"></label>
                <input asp-for="newEvent.EventName" class="form-control" />
                <span asp-validation-for="newEvent.EventName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="newEvent.EventDate" class="control-label"></label>
                <input asp-for="newEvent.EventDate" class="form-control" type="date" />
                <span asp-validation-for="newEvent.EventDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="newEvent.StartTime" class="control-label"></label>
                <input asp-for="newEvent.StartTime" class="form-control" type="time"/>
                <span asp-validation-for="newEvent.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="newEvent.EndTime" class="control-label"></label>
                <input asp-for="newEvent.EndTime" class="form-control" type="time" />
                <span asp-validation-for="newEvent.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="newEvent.EventType" class="control-label"></label>
                <input asp-for="newEvent.EventType" class="form-control" />
                <span asp-validation-for="newEvent.EventType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@Model.Message

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
